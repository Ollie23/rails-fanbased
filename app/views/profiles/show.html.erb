<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <h3><%= @profile.first_name.capitalize + " " + @profile.last_name.capitalize %></h3>
      <p><%= @profile.username %></p>
      <p><%= @profile.age %></p>
      <ul>
        <h4>Your teams</h4>
        <% @profile.user.team.each do |team| %>
          <%= link_to team_path(team) do %>
            <li> <%= team.name %> </li>
          <%end%>
        <%end%>
      </ul>
      <ul>
        <h4>Your Events</h4>
        <% @profile.user.events.each do |event| %>
             <%= event.game.home_team.name + " " + "V" + " " + event.game.away_team.name %>
        <%end%>
      </ul>
    </div>
  </div>
</div>
