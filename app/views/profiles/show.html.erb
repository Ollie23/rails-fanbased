<div class="text-center"><h1>My Profile</h1></div>
<hr>
<div class="container profile-card  text-center">
  <div class="row">
    <div class="col-xs-12 col-md-6">

      <% if @profile.photo.present? %>
      <div class="user-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path(@profile.photo )%>);">
        <p><%=@profile.age%></p>
        <div class= "user-data">
          <h3><%=@profile.first_name + " " + @profile.last_name%></h3>
          <h3 class="subheader"><%=@profile.username %></h3>
        </div>
      </div>
      <% else %>
        <div class="user-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://static.pexels.com/photos/47730/the-ball-stadion-football-the-pitch-47730.jpeg');">
        <p><%=@profile.age%></p>
        <div class= "user-data">
          <h3><%=@profile.first_name + " " + @profile.last_name%></h3>
          <h3 class="subheader"><%=@profile.username %></h3>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
<hr>
<br>
<br>
<div class="your-teams">
  <div class="container">
    <div class="row">
      <h2 class="text-center">Your teams</h2>
      <br>
        <% @profile.user.team.each do |team| %>
        <div class="col-xs-12 col-sm-4 text-center">
          <%= link_to team_path(team) do %>
            <p> <%= team.name %> </p>

            <div class="team-choose">
                <%= cl_image_tag team.photo %>
                </div>
            <%= link_to team_fan_path(team), method: :delete do%>
              <i class="fa fa-window-close" aria-hidden="true"></i>
            <%end%>
            <br>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <br>
  <div class= "text-center">
    <div class="btn btn-success add-teams">
      <%= link_to teams_path do %>More Teams<% end %>
    </div>
  </div>
  <br>
</div>



<div class="text-center padded">
  <h1>Your Events</h1>
    <% @profile.user.events.each do |event| %>
      <p><%= event.game.home_team.name %> V <%= event.game.away_team.name %> </p>
      <div class="btn btn-success add-teams">
      <%= link_to venue_path(event.venue) do %>
        <p>More info </p>
      <% end %>
      </div>
      <br>
    <% end %>
</div>

<div class= "text-center padded">
    <div class="btn btn-success add-teams">
      <%= link_to edit_profile_path(@profile) do %>Edit Profile<% end %>
    </div>
  </div>

