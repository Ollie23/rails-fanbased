<div class="text-center padded">
 <h1><%= @game.date_time.strftime('%d/%m/%Y') %></h1>
 <h1> <%= @game.home_team.name + " " + "V" + " " + @game.away_team.name %> </h1>
<h2><%=@game.kickoff.strftime('%H:%M')%></h2>
</div>
<div class="container">
  <div class="row">
      <% @game.venues.each do |venue|%>
        <%= link_to venue_path(venue) do %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= venue.photo %>);">
            <h3>
              <%=venue.name%>
            </h3>
            <p>
              <%=venue.address%>
            <br>
              Closing time: <%= venue.close.strftime('%H:%M') %>
            </p>
          </div>
        </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>

