<div class= "text-center">
  <h1><%= @venue.name %></h1>
  <h3><%= @venue.rating %></h3>
</div>
<div class="venue-info">
  <div class="container small-padded">
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <h3><%=@venue.description%></h3>
        <div>
          <ul class="list-inline">
            <li><p>TV Screens: <%= @venue.screens %></p></li>
            <li>
            <% if @venue.internet == true%>
            <i class="fa fa-wifi" aria-hidden="true"></i>
            <% end %>
            </li>
            <li>
            <% if current_user && current_user.admin? %>
            <%= link_to 'Edit venue', edit_venue_path(@venue), class: 'btn btn-primary'%>
            <%= link_to "Delete Bar", venue_path(@venue), method: :delete, class: 'btn btn-primary'%>
            <%= link_to "Add Events", new_venue_event_path(@venue), class: "btn btn-primary" %>
            <% end %>
            </li>
          </ul>
        </div>
        <% @venue.events.each do |event| %>
          <li>
            <%= event.game.home_team.name %> vs <%= event.game.away_team.name %>
            <% if current_user %>
              <%= simple_form_for [event, @attendee] do |f| %>
                <%= f.input :event_id, as: :hidden, input_html: { value: event.id } %>
                <%= f.input :user_id, as: :hidden, input_html: {value: current_user.id} %>
              <%= f.submit %>
            <% end %>
          <% end %>

         </li>
        <% end %>
        <div id="map" style="width: 100%; height: 600px;"></div>

      </div>
    </div>
  </div>
</div>
<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>

