

<div class="container">
  <div class="row">
    <h1>Venues</h1>


    <% @venues.each do |venue| %>
  <div class="col-xs-12 col-sm-6 col-md-3">
        <%= link_to venue_path(venue) do %>
          <ul>
          <h3><%=venue.name%></h3>
          <%=venue.address%>
          <br>
          Closing time: <%= venue.close.strftime('%H:%M') %>

      </ul>
    <% end %>
  </div>
  <% end %>
  </div>
</div>
</div>


<div>
<% if current_user.admin? %>
<%= link_to 'New Venue', new_venue_path, class: 'btn btn-primary'%>
<% end %>
</div>
